<?php /* @var $this Mage_Core_Block_Captcha_Zend */ ?>

<?php /* @var $captcha Mage_Core_Model_Captcha_Zend */ ?>
<?php $captcha = $this->getCaptchaModel() ?>

<div class="capcha">
    <img id="<?php echo $this->getFormId() ?>" class="captcha-img" height="<?php echo $this->getImgHeight() ?>" src="<?php echo $captcha->getImgSrc() ?>"/><img src="/img/arrow_capcha.png" alt="">

    <input name="<?php echo Mage_Captcha_Helper_Data::INPUT_NAME_FIELD_VALUE ?>[<?php echo $this->getFormId()?>]" type="text" id="captcha_<?php echo $this->getFormId() ?>" />

    <a id="captcha-reload" class="captcha-reload" title="" onclick="$('<?php echo $this->getFormId()?>').captcha.refresh(this)">Обновить капчу (CAPTCHA)</a>
</div>


<script type="text/javascript">//<![CDATA[
    $('<?php echo $this->getFormId() ?>').captcha = new Captcha('<?php echo $this->getRefreshUrl() ?>', '<?php echo $this->getFormId() ?>');
    //]]></script>

<?php if ($captcha->isCaseSensitive()) :?>
    <div class="captcha-note">
        <?php echo $this->__('<strong>Attention</strong>: Captcha is case sensitive.') ?>
    </div>
<?php endif; ?>